@page
@using FeatureRequestPortal.Localization
@using FeatureRequestPortal.Web.Pages.MyFeatures
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model CreateModalModel
@inject IStringLocalizer<FeatureRequestPortalResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="MyFeature" asp-page="/MyFeatures/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewFeature"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
